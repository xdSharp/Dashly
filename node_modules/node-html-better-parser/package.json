{
  "name": "node-html-better-parser",
  "version": "1.4.11",
  "description": "A very fast HTML parser, generating a simplified DOM, with basic element query support.",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "test": "mocha --recursive --extension ts",
    "clean": "del-cli ./dist/",
    "ts:cjs": "tsc -m commonjs",
    "ts:umd": "tsc -t es5 -m umd -d false --outDir ./dist/umd/",
    "build": "npm run test && npm run clean && npm run ts:cjs && npm run ts:umd",
    "dev": "tsc -w",
    "prepare": "npm run build",
    "release": "npm run build && release-it",
    "pretest": "tsc -m commonjs"
  },
  "keywords": [
    "fast html parser nodejs typescript"
  ],
  "author": "Xiaoyi Shi <ashi009@gmail.com>",
  "contributors": [
    "taoqf<tao_qiufeng@126.com>",
    "Fran√ßois Billioud<f.billioud@gmail.com>"
  ],
  "license": "MIT",
  "dependencies": {
    "html-entities": "^2.3.2"
  },
  "devDependencies": {
    "@types/mocha": "latest",
    "@types/node": "latest",
    "blanket": "latest",
    "del-cli": "latest",
    "mocha": "latest",
    "release-it": "latest",
    "should": "latest",
    "spec": "latest",
    "travis-cov": "latest",
    "ts-node": "latest",
    "typescript": "next"
  },
  "config": {
    "blanket": {
      "pattern": "./dist/src/index.js",
      "data-cover-never": [
        "node_modules"
      ]
    },
    "travis-cov": {
      "threshold": 70
    }
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Sharcoux/node-html-parser.git"
  },
  "bugs": {
    "url": "https://github.com/Sharcoux/node-html-parser/issues"
  },
  "homepage": "https://github.com/Sharcoux/node-html-parser"
}
